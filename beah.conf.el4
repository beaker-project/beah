[DEFAULT]
LOG=True
ROOT=
ETC_ROOT=/etc
VAR_ROOT=/var/beah
LOG_PATH=/var/log

# Development build. Enable even more logging.
# Can not be changed during runtime, as this will affect, how some classes are
# constructed:
DEVEL=False

# Copy all log messages to stdout too:
CONSOLE_LOG=False

[CONTROLLER]
NAME=beah
LOG_FILE_NAME=/var/log/beah.log
RUNTIME_FILE_NAME=/var/beah/beah.runtime

[BACKEND]
INTERFACE=
PORT=12432

[TASK]
INTERFACE=localhost
PORT=12434

# This filetype looks the most appropriate :-/
# vim:ft=config
