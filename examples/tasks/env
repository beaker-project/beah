function echo_pair()
{
	echo "$1=\"$2\""
}
function echo_var()
{
	local _answ="$(eval "echo \"\$$1\"")"
	echo_pair "$1" "$_answ"
}

echo_var PATH
echo_var PYTHONPATH
echo_var BEAH_THOST
echo_var BEAH_TPORT
echo_var BEAH_TID
